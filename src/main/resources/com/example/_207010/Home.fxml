<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example._207010.HomeController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to the GPA Calculator!" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Click below to start calculating your GPA" />
            <Button onAction="#handleStart" text="Start GPA Calculator" />
        </VBox>
    </center>

</BorderPane>

