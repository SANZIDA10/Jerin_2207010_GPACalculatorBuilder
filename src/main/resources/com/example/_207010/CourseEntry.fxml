<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example._207010.CourseController">
    <children>
        <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <children>
                <Label text="Course Entry" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <!-- Total Credit First -->
                    <Label text="Total Credit:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="totalCreditField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Course Fields -->
                    <Label text="Course Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Course Code:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="codeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Credit:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="creditField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Teacher 1:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="teacher1Field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Teacher 2:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="teacher2Field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Grade:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="gradeBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Course" onAction="#handleAddCourse"/>
                    <Button fx:id="calculateButton" text="Calculate GPA" onAction="#handleCalculate" disable="true"/>
                </HBox>

            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
